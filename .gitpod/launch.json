    "version": "0.2.0",
    "configurations": [

        {
            "name": "Rails server",
            "type": "Ruby",
            "request": "launch",
            "program": "${workspaceRoot}/bin/rails",
            "args": [
                "server"
            ],
            "useBundler": true
        },
        {
            "name": "Plugin test",
            "type": "Ruby",
            "request": "launch",
            "program": "${workspaceRoot}/bin/rake",
            "args": [
                "redmine:plugins:test"
            ],
            "env": {
                "RAILS_ENV": "test"
            },
            "useBundler": true
        }
    ]
}